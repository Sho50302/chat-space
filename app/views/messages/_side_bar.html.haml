.side
  .side__head
    .side__head__items
      .side__head__items__name
        = current_user.name
      %ul.side__head__items__icon
        %li
          = link_to new_group_path, class: "side__head__items__icon__edit" do
            %i.fas.fa-edit
        %li
          = link_to edit_user_path(current_user), class: "side__head__items__icon__cog" do
            %i.fas.fa-cog
  .side__body
    - current_user.groups.each do |group|
      .side__body__group
        = link_to group_messages_path(group) do
          .side__body__group__name
            = group.name
          .side__body__group__message
            = group.show_last_message