.main
  .main__head
    .main__head__left
      .main__head__left__text
        = @group.name
        %ul.main__head__left__lists
          %li
            Memberï¼š
          - @group.users.each do |user|
            .main__head__left__lists__members
              %li= user.name 
    .main__head__right
      = link_to edit_group_path(@group), class: "main__head__right__btn" do
        Edit
  .main__body
    = render @messages
  .main__foot
    .main__foot__input
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'new_message__left', placeholder: 'type a message'
        = f.label :image, class: 'new_message__right' do
          %i.far.fa-image
          = f.file_field :image
        = f.submit 'Send', class: 'new_message__btn'